{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ iOS: Build & Run",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["run-ios"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ¤– Android: Build & Run",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["run-android"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ§ª Test iOS: Release Build",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["test-ios"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ§ª Test Android: Release Build",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["test-android"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ® Godot: Run Example",
      "type": "godot",
      "request": "launch",
      "project": "${workspaceFolder}/Example",
      "scene": "res://main.tscn",
      "editor_path": "${config:godot_tools.editor_path}",
      "debug": true
    },
    {
      "name": "ğŸ“š Docs: Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/docs",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "console": "integratedTerminal"
    }
  ]
}
