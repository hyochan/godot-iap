{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ”¨ iOS: Build Framework",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["ios"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ”¨ Android: Build Framework",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["android"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ iOS: Build & Run",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["run-ios"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ¤– Android: Build & Run",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["run-android"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ“¦ Release iOS: Local Build",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["test-ios"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ“¦ Release Android: Local Build",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["test-android"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ“¦ Release iOS: GitHub Release",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["release-ios"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ“¦ Release Android: GitHub Release",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "make",
      "runtimeArgs": ["release-android"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ® Godot: Run Example",
      "type": "godot",
      "request": "launch",
      "project": "${workspaceFolder}/Example",
      "scene": "res://main.tscn",
      "editor_path": "${config:godot_tools.editor_path}",
      "debug": true
    },
    {
      "name": "ğŸ“š Docs: Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/docs",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "console": "integratedTerminal"
    }
  ]
}
